	<update id="updateByPrimaryKey" parameterType="Entity.CourseInfo">
		update course_info
		set cname = #{cname,jdbcType=VARCHAR},
		caddress =
		#{caddress,jdbcType=VARCHAR}
		where course_id = #{id,jdbcType=INTEGER}
